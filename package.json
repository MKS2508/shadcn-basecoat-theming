{
  "name": "theme-manager-monorepo",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "description": "Monorepo for theme management packages and demo",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "install-theme": "tsx scripts/install-theme.ts",
    "dev:logger": "node logger-server.js",
    "build:packages": "pnpm --filter './packages/*' run build",
    "type-check:all": "pnpm --filter './packages/*' run type-check",
    "build:all": "pnpm run build:packages && pnpm run build",
    "build:core": "pnpm --filter @mks2508/shadcn-basecoat-theme-manager run build",
    "build:template-engine": "pnpm --filter @mks2508/simple-html-component-template-engine run build",
    "build:vanilla": "pnpm --filter @mks2508/theme-manager-vanilla run build",
    "build:react": "pnpm --filter @mks2508/theme-manager-react run build",
    "build:web-components": "pnpm --filter @mks2508/theme-manager-web-components run build",
    "build:toolkit": "pnpm --filter @mks2508/theme-toolkit run build:all",
    "dev:toolkit": "pnpm --filter @mks2508/theme-toolkit run dev",
    "cli:toolkit": "pnpm --filter @mks2508/theme-toolkit run cli",
    "type-check:toolkit": "pnpm --filter @mks2508/theme-toolkit run type-check",
    "commit:auto": "tsx project-utils/core/commit-generator.ts --auto-approve",
    "commit:generate": "tsx project-utils/core/commit-generator.ts",
    "version:auto": "tsx project-utils/core/version-manager.ts --auto-approve",
    "version:patch": "tsx project-utils/core/version-manager.ts --type=patch --auto-approve --create-tag",
    "version:minor": "tsx project-utils/core/version-manager.ts --type=minor --auto-approve --create-tag",
    "version:major": "tsx project-utils/core/version-manager.ts --type=major --auto-approve --create-tag",
    "release:auto": "tsx project-utils/workflows/auto-release.ts --auto-approve",
    "release:patch": "tsx project-utils/workflows/auto-release.ts --type=patch --auto-approve --publish-npm",
    "release:minor": "tsx project-utils/workflows/auto-release.ts --type=minor --auto-approve --publish-npm",
    "release:major": "tsx project-utils/workflows/auto-release.ts --type=major --auto-approve --publish-npm --publish-github",
    "release:alpha": "tsx project-utils/workflows/auto-release.ts --type=patch --prefix=alpha --auto-approve --publish-npm",
    "release:beta": "tsx project-utils/workflows/auto-release.ts --type=minor --prefix=beta --auto-approve --publish-npm",
    "commit:ui": "tsx project-utils/core/commit-ui.ts",
    "version:alpha": "tsx project-utils/core/version-manager.ts --prefix=alpha --auto-approve",
    "version:beta": "tsx project-utils/core/version-manager.ts --prefix=beta --auto-approve",
    "version:stable": "tsx project-utils/core/version-manager.ts --prefix= --auto-approve",
    "release:github": "tsx project-utils/core/github-release-manager.ts --auto-approve",
    "ci:install": "pnpm install --frozen-lockfile",
    "ci:build": "pnpm run build:packages",
    "ci:test": "echo 'Running tests...' && exit 0",
    "ci:publish": "pnpm publish -r --access public --no-git-checks",
    "ci:publish:github": "pnpm publish -r --registry=https://npm.pkg.github.com --access public --no-git-checks",
    "test": "echo 'Running tests...' && exit 0",
    "test:unit": "echo 'Running unit tests...' && exit 0",
    "test:integration": "echo 'Running integration tests...' && exit 0",
    "test:e2e": "echo 'Running e2e tests...' && exit 0",
    "lint": "echo 'Running linter...' && exit 0",
    "lint:fix": "echo 'Running linter with fixes...' && exit 0",
    "clean": "rm -rf packages/*/dist/ packages/*/node_modules/.cache",
    "clean:deps": "rm -rf node_modules packages/*/node_modules",
    "clean:all": "pnpm run clean && pnpm run clean:deps",
    "validate": "pnpm run type-check:all && pnpm run lint",
    "workflow:commit": "pnpm run commit:auto",
    "workflow:release": "pnpm run version:auto && pnpm run ci:build && pnpm run release:github",
    "workflow:full": "pnpm run commit:auto && pnpm run workflow:release"
  },
  "dependencies": {
    "@mks2508/better-logger": "^5.0.0",
    "@mks2508/shadcn-basecoat-theme-manager": "workspace:*",
    "@mks2508/theme-manager-vanilla": "workspace:*",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "basecoat-css": "^0.3.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "tailwind-merge": "^3.4.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@google/genai": "^1.41.0",
    "@tailwindcss/vite": "^4.1.18",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "keywords": [
    "vite",
    "typescript",
    "tailwindcss",
    "theme-switching",
    "basecoat-ui",
    "tweakcn"
  ]
}
