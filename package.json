{
  "name": "theme-manager-monorepo",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "description": "Monorepo for theme management packages and demo",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "install-theme": "tsx scripts/install-theme.ts",
    "dev:logger": "node logger-server.js",
    "build:packages": "pnpm --filter './packages/*' run build",
    "type-check:all": "pnpm --filter './packages/*' run type-check",
    "build:core": "pnpm --filter @mks2508/shadcn-basecoat-theme-manager run build",
    "build:template-engine": "pnpm --filter @mks2508/simple-html-component-template-engine run build",
    "build:vanilla": "pnpm --filter @mks2508/theme-manager-vanilla run build",
    "build:react": "pnpm --filter @mks2508/theme-manager-react run build",
    "build:web-components": "pnpm --filter @mks2508/theme-manager-web-components run build",
    "commit:auto": "tsx project-utils/core/commit-generator.ts --auto-approve",
    "commit:generate": "tsx project-utils/core/commit-generator.ts",
    "version:auto": "tsx project-utils/core/version-manager.ts --auto-approve",
    "version:patch": "tsx project-utils/core/version-manager.ts --type=patch --auto-approve --create-tag",
    "version:minor": "tsx project-utils/core/version-manager.ts --type=minor --auto-approve --create-tag",
    "version:major": "tsx project-utils/core/version-manager.ts --type=major --auto-approve --create-tag",
    "release:auto": "tsx project-utils/workflows/auto-release.ts --auto-approve",
    "release:patch": "tsx project-utils/workflows/auto-release.ts --type=patch --auto-approve --publish-npm",
    "release:minor": "tsx project-utils/workflows/auto-release.ts --type=minor --auto-approve --publish-npm",
    "release:major": "tsx project-utils/workflows/auto-release.ts --type=major --auto-approve --publish-npm --publish-github",
    "release:alpha": "tsx project-utils/workflows/auto-release.ts --type=patch --prefix=alpha --auto-approve --publish-npm",
    "release:beta": "tsx project-utils/workflows/auto-release.ts --type=minor --prefix=beta --auto-approve --publish-npm"
  },
  "dependencies": {
    "@mks2508/better-logger": "^0.3.0",
    "@mks2508/shadcn-basecoat-theme-manager": "^1.1.2",
    "@mks2508/theme-manager-vanilla": "^0.1.1",
    "@radix-ui/react-slot": "^1.2.3",
    "basecoat-css": "^0.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "tailwind-merge": "^3.3.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@google/genai": "^1.16.0",
    "@tailwindcss/vite": "^4.0.0-alpha.26",
    "shadcn": "^3.0.0",
    "tailwindcss": "^4.0.0-alpha.26",
    "tsx": "^4.20.5",
    "typescript": "^5.6.2",
    "vite": "^5.4.2"
  },
  "keywords": [
    "vite",
    "typescript",
    "tailwindcss",
    "theme-switching",
    "basecoat-ui",
    "tweakcn"
  ]
}
