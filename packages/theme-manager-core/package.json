{
  "name": "@mks2508/shadcn-basecoat-theme-manager",
  "version": "1.1.1",
  "description": "Core theme and font management system for shadcn/ui and Basecoat CSS",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "theme",
    "theming",
    "css-variables",
    "shadcn",
    "basecoat",
    "font-management",
    "dark-mode"
  ],
  "author": "MKS2508",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "fake-indexeddb": "^6.2.2",
    "happy-dom": "^18.0.1",
    "tsup": "^8.0.0",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@mks2508/better-logger": "^0.3.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MKS2508/theme-manager.git"
  }
}