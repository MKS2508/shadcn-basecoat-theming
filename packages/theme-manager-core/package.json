{
  "name": "@mks2508/shadcn-basecoat-theme-manager",
  "version": "4.0.5",
  "description": "Core theme and font management system for shadcn/ui and Basecoat CSS",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./themes/synthwave84-light.css": "./dist/themes/synthwave84-light.css",
    "./themes/synthwave84-dark.css": "./dist/themes/synthwave84-dark.css",
    "./themes/graphite-light.css": "./dist/themes/graphite-light.css",
    "./themes/graphite-dark.css": "./dist/themes/graphite-dark.css",
    "./themes/darkmatteviolet-light.css": "./dist/themes/darkmatteviolet-light.css",
    "./themes/darkmatteviolet-dark.css": "./dist/themes/darkmatteviolet-dark.css",
    "./registry.json": "./dist/registry.json"
  },
  "scripts": {
    "build": "tsup && bun run copy:themes && bun run copy:registry",
    "copy:themes": "mkdir -p dist/themes && cp src/themes/*.css dist/themes/",
    "copy:registry": "cd ../.. && cp themes/registry.json packages/theme-manager-core/dist/registry.json",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "theme",
    "theming",
    "css-variables",
    "shadcn",
    "basecoat",
    "font-management",
    "dark-mode"
  ],
  "author": "MKS2508",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "fake-indexeddb": "^6.2.2",
    "happy-dom": "^20.6.1",
    "tsup": "^8.0.0",
    "typescript": "^5.6.2",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@mks2508/better-logger": "^5.0.0"
  },
  "files": [
    "dist",
    "dist/themes/*.css",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MKS2508/theme-manager.git"
  }
}
