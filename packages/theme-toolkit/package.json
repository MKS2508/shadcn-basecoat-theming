    "type": "git",
    "url": "https://github.com/MKS2508/themes.git",
    "directory": "packages/theme-toolkit"
  },
  "bugs": {
    "url": "https://github.com/MKS2508/themes/issues"
  },
  "homepage": "https://github.com/MKS2508/themes/tree/main/packages/theme-toolkit"
}