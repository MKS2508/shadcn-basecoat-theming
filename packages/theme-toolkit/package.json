
{
  "name": "@mks2508/theme-toolkit",
  "version": "1.0.0",
  "description": "Theme development toolkit with CLI and web interface",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "theme-toolkit": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    }
  },
  "files": [
    "dist",
    "themes",
    "public"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:api\" \"vite\"",
    "dev:api": "bun --watch src/server/app.ts",
    "dev:web": "vite",
    "start": "bun run dev",
    "cli": "bun src/cli/index.ts",
    "build": "vite build",
    "build:api": "bun build src/server/app.ts --outdir ./dist --target bun --external bun-types",
    "build-cli": "bun build src/cli/index.ts --outdir ./dist --target bun --external bun-types",
    "build:all": "pnpm run build && pnpm run build:api && pnpm run build-cli",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "preview": "vite preview",
    "validate-themes": "bun src/scripts/validate-themes.ts",
    "export-all": "bun src/scripts/export-all.ts"
  },
  "dependencies": {
    "@mks2508/better-logger": "^5.0.0",
    "@mks2508/shadcn-basecoat-theme-manager": "^1.1.2",
    "@mks2508/theme-manager-react": "workspace:*",
    "commander": "^9.4.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "inquirer": "^9.2.0",
    "clipboardy": "^3.0.0",
    "open": "^8.4.0",
    "culori": "^3.0.0",
    "color-contrast-checker": "^2.1.0",
    "delta-e": "^0.0.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@tailwindcss/vite": "^4.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@eslint/js": "^9.19.0",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "vite": "^6.1.0",
    "typescript": "^5.6.2",
    "concurrently": "^9.2.1"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "keywords": [
    "theme",
    "css",
    "color",
    "accessibility",
    "wcag",
    "cli",
    "oklch",
    "development",
    "toolkit"
  ],
  "author": "MKS2508",
  "license": "MIT",
