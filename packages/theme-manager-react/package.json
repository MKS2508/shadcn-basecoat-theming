{
  "name": "@mks2508/theme-manager-react",
  "version": "0.1.1",
  "description": "React hooks and components for theme management (shadcn/ui compatible)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "theme",
    "shadcn",
    "hooks",
    "dark-mode",
    "radix-ui",
    "lucide-react"
  ],
  "author": "MKS2508",
  "license": "MIT",
  "dependencies": {
    "@mks2508/shadcn-basecoat-theme-manager": "^1.1.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "@radix-ui/react-popover": "^1.0.0",
    "@radix-ui/react-dialog": "^1.0.0",
    "lucide-react": "^0.400.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.2"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ]
}