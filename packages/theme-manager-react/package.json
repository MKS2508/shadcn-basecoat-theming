{
  "name": "@mks2508/theme-manager-react",
  "version": "0.1.0",
  "description": "React hooks and components for theme management (shadcn/ui compatible)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "react",
    "theme",
    "shadcn",
    "hooks",
    "dark-mode"
  ],
  "author": "MKS2508",
  "license": "MIT",
  "dependencies": {
    "@mks2508/shadcn-basecoat-theme-manager": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "tsup": "^8.0.0",
    "typescript": "^5.6.2"
  },
  "files": [
    "dist",
    "README.md"
  ]
}