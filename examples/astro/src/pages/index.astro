---
import Layout from '@/layouts/Layout.astro';
import { ThemeProvider } from '@/components/ThemeProvider';
import { ThemeDropdown } from '@/components/ThemeDropdown';
import { ModeToggle } from '@/components/ModeToggle';
import { FontSelector } from '@/components/FontSelector';
import '@/styles/global.css';
---

<Layout title="Astro Theme Manager Example">
  <ThemeProvider client:load>
    {/* Header */}
    <header class="sticky top-0 z-40 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
      <div class="container mx-auto px-4 flex h-16 items-center justify-between">
        {/* Logo/Title */}
        <div class="flex items-center space-x-3">
          <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v6a4 4 0 004 4h4V5z"></path>
          </svg>
          <div>
            <h1 class="text-lg font-semibold">Astro Theme Manager</h1>
            <p class="text-xs text-muted-foreground">Core Package Example</p>
          </div>
        </div>

        {/* Theme Controls */}
        <div class="flex items-center space-x-3">
          <ThemeDropdown client:load />
          <ModeToggle client:load />
          <FontSelector client:load />
        </div>
      </div>
    </header>

    {/* Main Content */}
    <main class="flex-1">
      {/* Hero Section */}
      <section class="py-12 md:py-20">
        <div class="container mx-auto px-4 text-center">
          <div class="max-w-3xl mx-auto space-y-6">
            <h2 class="text-4xl font-bold tracking-tight">
              ðŸš€ Astro + Core Theme Manager
            </h2>
            <p class="text-xl text-muted-foreground">
              A modern theme management system built with Astro's island architecture, 
              React components, and the core theme manager package.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <button class="btn-primary">
                Get Started
              </button>
              <button class="btn-outline">
                View Documentation
              </button>
            </div>
          </div>
        </div>
      </section>

      {/* Features Grid */}
      <section class="py-16 bg-muted/30">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto">
            <h3 class="text-2xl font-semibold text-center mb-12">Features</h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {/* Feature 1 */}
              <div class="bg-card p-6 rounded-lg border">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v6a4 4 0 004 4h4V5z"></path>
                  </svg>
                </div>
                <h4 class="font-semibold mb-2">Dynamic Themes</h4>
                <p class="text-sm text-muted-foreground">
                  Switch between multiple themes instantly with no FOUC
                </p>
              </div>

              {/* Feature 2 */}
              <div class="bg-card p-6 rounded-lg border">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
                  </svg>
                </div>
                <h4 class="font-semibold mb-2">Light/Dark/Auto Modes</h4>
                <p class="text-sm text-muted-foreground">
                  Intelligent mode switching that follows system preferences
                </p>
              </div>

              {/* Feature 3 */}
              <div class="bg-card p-6 rounded-lg border">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                  </svg>
                </div>
                <h4 class="font-semibold mb-2">Font Management</h4>
                <p class="text-sm text-muted-foreground">
                  Customize typography with Google Fonts integration
                </p>
              </div>

              {/* Feature 4 */}
              <div class="bg-card p-6 rounded-lg border">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <h4 class="font-semibold mb-2">Astro Islands</h4>
                <p class="text-sm text-muted-foreground">
                  Hydrated components only where needed for optimal performance
                </p>
              </div>

              {/* Feature 5 */}
              <div class="bg-card p-6 rounded-lg border">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                </div>
                <h4 class="font-semibold mb-2">TypeScript</h4>
                <p class="text-sm text-muted-foreground">
                  Full type safety with IntelliSense and auto-completion
                </p>
              </div>

              {/* Feature 6 */}
              <div class="bg-card p-6 rounded-lg border">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
                  <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <h4 class="font-semibold mb-2">Basecoat UI</h4>
                <p class="text-sm text-muted-foreground">
                  Beautiful, accessible components with consistent design
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      {/* Demo Section */}
      <section class="py-16">
        <div class="container mx-auto px-4 text-center">
          <div class="max-w-2xl mx-auto space-y-6">
            <h3 class="text-2xl font-semibold">Try It Out</h3>
            <p class="text-muted-foreground">
              Use the theme controls in the header to see the theme manager in action.
              Changes are persisted to localStorage and applied instantly.
            </p>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mt-8">
              <div class="bg-card p-4 rounded-lg border text-center">
                <div class="text-sm font-medium mb-2">ðŸŽ¨ Theme Selector</div>
                <div class="text-xs text-muted-foreground">Switch between available themes</div>
              </div>
              <div class="bg-card p-4 rounded-lg border text-center">
                <div class="text-sm font-medium mb-2">ðŸŒ™ Mode Toggle</div>
                <div class="text-xs text-muted-foreground">Cycle through light/dark/auto</div>
              </div>
              <div class="bg-card p-4 rounded-lg border text-center">
                <div class="text-sm font-medium mb-2">ðŸ”¤ Font Selector</div>
                <div class="text-xs text-muted-foreground">Configure typography settings</div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    {/* Footer */}
    <footer class="border-t py-8">
      <div class="container mx-auto px-4 text-center text-sm text-muted-foreground">
        <p>
          Built with 
          <a href="https://astro.build/" class="text-primary hover:underline">Astro</a>, 
          <a href="https://react.dev/" class="text-primary hover:underline">React</a>, and 
          <a href="https://basecoatui.com/" class="text-primary hover:underline">Basecoat UI</a>
        </p>
        <p class="mt-2">
          Theme management powered by <code class="font-mono text-xs bg-muted px-1 rounded">@mks2508/shadcn-basecoat-theme-manager</code>
        </p>
      </div>
    </footer>
  </ThemeProvider>
</Layout>