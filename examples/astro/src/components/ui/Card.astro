---
export interface Props {
  title?: string;
  description?: string;
  class?: string;
}

const { title, description, class: className = "" } = Astro.props;
---

<div class={`card ${className}`.trim()}>
  {(title || description) && (
    <header>
      {title && <h2>{title}</h2>}
      {description && <p>{description}</p>}
    </header>
  )}
  <section>
    <slot />
  </section>
  <footer class="card-footer">
    <slot name="footer" />
  </footer>
</div>