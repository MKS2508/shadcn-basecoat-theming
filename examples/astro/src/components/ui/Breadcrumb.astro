---
export interface BreadcrumbItem {
  label: string;
  href?: string;
}

export interface Props {
  items?: BreadcrumbItem[];
  class?: string;
}

const { items = [], class: className = "" } = Astro.props;
---

<ol class={`text-muted-foreground flex flex-wrap items-center gap-1.5 text-sm break-words sm:gap-2.5 ${className}`.trim()}>
  {items.length > 0 ? (
    items.map((item, index) => (
      <li class="flex items-center gap-1.5">
        {item.href ? (
          <a href={item.href} class="text-muted-foreground transition-colors hover:text-foreground">
            {item.label}
          </a>
        ) : (
          <span class="text-foreground font-medium">{item.label}</span>
        )}
        {index < items.length - 1 && (
          <span class="text-muted-foreground">/</span>
        )}
      </li>
    ))
  ) : (
    <slot />
  )}
</ol>