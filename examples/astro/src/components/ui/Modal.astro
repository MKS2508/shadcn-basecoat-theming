---
export interface Props {
  id: string;
  titleId: string;
  descriptionId?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  class?: string;
}

const { 
  id, 
  titleId, 
  descriptionId,
  size = 'md',
  class: className = "" 
} = Astro.props;

const sizeClasses = {
  sm: 'max-w-sm',
  md: 'max-w-md', 
  lg: 'max-w-lg',
  xl: 'max-w-xl',
  full: 'max-w-full'
};
---

<dialog
  id={id}
  class={`dialog modal modal-${size} ${className}`.trim()}
  aria-labelledby={titleId}
  aria-describedby={descriptionId}
>
  <article class={`${sizeClasses[size]} p-0 bg-card border border-border rounded-lg shadow-lg`}>
    <div class="p-6">
      <slot />
    </div>
  </article>
</dialog>

<style>
  .modal article {
    min-height: 200px;
    max-height: 80vh;
    overflow-y: auto;
  }
  
  .modal-sm article {
    min-width: 320px;
  }
  
  .modal-md article {
    min-width: 448px;
  }
  
  .modal-lg article {
    min-width: 512px;
  }
  
  .modal-xl article {
    min-width: 576px;
  }
  
  /* Diferencias con AlertDialog */
  .modal article {
    background: var(--card);
    border: 1px solid var(--border);
  }
</style>