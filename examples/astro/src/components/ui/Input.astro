---
export interface Props {
  type?: 'text' | 'email' | 'password' | 'number' | 'tel' | 'url' | 'search' | 'date' | 'time' | 'datetime-local' | 'month' | 'week' | 'color' | 'file' | 'hidden' | 'range' | 'checkbox' | 'radio' | 'submit' | 'reset' | 'button';
  placeholder?: string;
  value?: string;
  disabled?: boolean;
  required?: boolean;
  id?: string;
  name?: string;
  class?: string;
  [key: string]: any;
}

const { 
  type = "text",
  placeholder,
  value,
  disabled = false,
  required = false,
  id,
  name,
  class: className = "",
  ...restProps
} = Astro.props;
---

<input 
  type={type}
  class={`input ${className}`.trim()}
  placeholder={placeholder}
  value={value}
  disabled={disabled}
  required={required}
  id={id}
  name={name}
  {...restProps}
/>