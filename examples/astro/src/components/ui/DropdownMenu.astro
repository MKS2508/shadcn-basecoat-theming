---
export interface Props {
  id: string;
  triggerId: string;
  triggerText: string;
  menuId: string;
  className?: string;
}

const { id, triggerId, triggerText, menuId, className = "" } = Astro.props;
---

<div id={id} class={`dropdown-menu ${className}`.trim()}>
  <button type="button" id={triggerId} aria-haspopup="menu" aria-controls={menuId} aria-expanded="false" class="btn-outline">{triggerText}</button>
  <div id={`${id}-popover`} data-popover aria-hidden="true" class="min-w-56">
    <div role="menu" id={menuId} aria-labelledby={triggerId}>
      <slot />
    </div>
  </div>
</div>