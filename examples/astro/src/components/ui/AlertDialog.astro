---
export interface Props {
  id: string;
  titleId: string;
  descriptionId: string;
  class?: string;
}

const { id, titleId, descriptionId, class: className = "" } = Astro.props;
---

<dialog
  id={id}
  class={`dialog ${className}`.trim()}
  aria-labelledby={titleId}
  aria-describedby={descriptionId}
>
  <article>
    <slot />
  </article>
</dialog>