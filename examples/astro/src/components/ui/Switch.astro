---
export interface Props {
  id?: string;
  name?: string;
  label?: string;
  checked?: boolean;
  disabled?: boolean;
  class?: string;
  [key: string]: any;
}

const { 
  id,
  name,
  label,
  checked = false, 
  disabled = false,
  class: className = "",
  ...restProps
} = Astro.props;
---

<label class="label flex items-center gap-2">
  <input 
    type="checkbox"
    role="switch"
    class={`input ${className}`.trim()}
    id={id}
    name={name}
    checked={checked}
    disabled={disabled}
    {...restProps}
  />
  {label && <span>{label}</span>}
</label>