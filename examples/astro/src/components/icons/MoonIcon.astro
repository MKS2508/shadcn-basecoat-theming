---
export interface Props {
  id?: string;
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { 
  id,
  class: className = '', 
  size = 'md'
} = Astro.props;

const sizeClasses = {
  sm: 'h-3 w-3',
  md: 'h-4 w-4', 
  lg: 'h-5 w-5',
  xl: 'h-6 w-6'
};

const classes = `${sizeClasses[size]} transition-opacity duration-200 ${className}`.trim();
---

<svg 
  id={id}
  class={classes}
  fill="none" 
  stroke="currentColor" 
  viewBox="0 0 24 24"
  aria-hidden="true"
>
  <path 
    stroke-linecap="round" 
    stroke-linejoin="round" 
    stroke-width="2" 
    d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
  />
</svg>