---
export interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { 
  class: className = '', 
  size = 'md'
} = Astro.props;

const sizeClasses = {
  sm: 'h-3 w-3',
  md: 'h-4 w-4', 
  lg: 'h-5 w-5',
  xl: 'h-6 w-6'
};

const classes = `${sizeClasses[size]} ${className}`.trim();
---

<svg 
  class={classes}
  fill="none" 
  stroke="currentColor" 
  viewBox="0 0 24 24"
  aria-hidden="true"
>
  <path 
    stroke-linecap="round" 
    stroke-linejoin="round" 
    stroke-width="2" 
    d="M12 4v16m8-8H4"
  />
</svg>