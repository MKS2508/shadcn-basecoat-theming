---
export interface Props {
  id?: string;
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { 
  id,
  class: className = '', 
  size = 'md'
} = Astro.props;

const sizeClasses = {
  sm: 'h-3 w-3',
  md: 'h-4 w-4', 
  lg: 'h-5 w-5',
  xl: 'h-6 w-6'
};

const classes = `${sizeClasses[size]} transition-opacity duration-200 ${className}`.trim();
---

<svg 
  id={id}
  class={classes}
  fill="none" 
  stroke="currentColor" 
  viewBox="0 0 24 24"
  aria-hidden="true"
>
